<%- layout('layouts/tubuh') %>
    <h1 class="my-5 mt-12 text-center text-6xl font-bold bg-gradient-to-r from-teal-300 to-slate-700 text-transparent bg-clip-text">Home</h1>
    <section class="w-full p-10 flex flex-wrap gap-10">
        <% for( let i = 0; i < users.length; i++ ) { %>
            <div class="card w-1/6 flex flex-col justify-center p-4 border-teal-400 border-2 text-slate-100">
                <p>No: <%= i + 1 %></p>
                <p>Username: <%= users[i].username %></p>
                <p>Password: <%= users[i].password %></p>
                <p>Is Admin: <%= users[i].is_admin %></p>
                <a class="w-1/2 mx-auto bg-teal-700 p-2 rounded-sm my-5" href="/user/<%= users[i]._id %>">See Detail</a>
            </div>
        <% } %>
    </section>
    <a href="/create">Add data</a>
