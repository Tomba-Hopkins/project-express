<% layout('layouts/tubuh') %>
    <h1 class="my-5 mt-12 text-center text-6xl font-bold bg-gradient-to-r from-teal-300 to-slate-700 text-transparent bg-clip-text ">Update User</h1>


    <form class="w-full p-8 flex flex-col items-center justify-center bg-gradient-to-r from-teal-500 to-slate-800 text-slate-100 m-3" action="/user/<%= user._id %>?_metode=PUT" method="post">
        <div class="flex flex-col w-1/4 items-center justify-center bg-slate-700 rounded-md p-2 py-4 my-6">
            <label for="username">Username</label>
            <input class="text-slate-700" required type="text" id="username" name="username" value="<%= user.username %>" >
        </div>
        <div class="flex flex-col w-1/4 items-center justify-center bg-slate-700 rounded-md p-2 py-4 my-6">
            <label for="password">Password</label>
            <input class="text-slate-700" required type="text" id="password" name="password" value="<%= user.password %>" >
        </div>


        <button class="w-1/6 bg-slate-700 p-4 rounded-md my-2" type="submit">Submit</button>
    </form>
